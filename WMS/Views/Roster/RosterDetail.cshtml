@model IEnumerable<WMS.Controllers.RosterDetailAttributes>
@{
    ViewBag.Title = "RosterDetail";
}

<h4 style="padding-top:20px;">Roster Details For Shift : @Model.FirstOrDefault().Shift</h4>

@{
    ViewBag.Title = "Index";
}
<h5>@Model.FirstOrDefault().Date</h5>
<h5>@Model.FirstOrDefault().Criteria</h5>
<table class="table table-bordered table-hover table-condensed">
    <tr class="table-header">
        <th>
            Day
        </th>
        <th>
             Duty Date
        </th>
        <th>
            Duty Code
        </th>
        <th>
             Duty Time
        </th>
        <th>
            Work Minutes
        </th>
    </tr>

@foreach (var item in Model) 
{
    if(item.Changed==true)
        {
            if(item.DutyCode=="R")
            {
                <tr   style="background-color:#7ac143">
                    <td>
                        @Html.DisplayFor(modelItem => item.Day)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.DutyDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DutyCode)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.DutyTime)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.WorkMin)
                    </td>
               </tr>
            }
            else
            {
            <tr   style="background-color:#F3F58E">
                  <td>
                    @Html.DisplayFor(modelItem => item.Day)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.DutyDate)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.DutyCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DutyTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkMin)
                </td>
            </tr>
            }
        }
        else
        {
            if(item.DutyCode=="R")
            {
                <tr   style="background-color:#7ac143">
                 <td>
                    @Html.DisplayFor(modelItem => item.Day)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.DutyDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DutyCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DutyTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkMin)
                </td>
            </tr>
            }
            else
            {
            <tr >
                <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
                <td>
                @Html.DisplayFor(modelItem => item.DutyDate)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.DutyCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DutyTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkMin)
            </td>
        </tr>
            }
        }
   
}

</table>
