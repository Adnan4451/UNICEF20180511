
@{
    ViewBag.Title = "Leave Qouta";
}

<h2>Leaves Settings</h2>
<a    href="~/LeaveSettings/LvQuotaList">List of Employees Leave Quotas</a><hr />
<p class="ErorrMessage">@ViewBag.CMessage</p>
@using (Html.BeginForm("CreateLeaveQuota", "LeaveSettings", FormMethod.Post))
                {
<article class="row">
 <div class="well bs-component">
        <form class="form-horizontal" action="~/Attendance/LeaveApplication/Create" enctype="multipart/form-data" method="post">
             @Html.AntiForgeryToken()
            <fieldset>
                <legend>Create New Leave Application</legend>
                <div style="margin-left:3%">
                        <div class="form-group">
                                <div class="radio-inline">
                                    @Html.RadioButton("RBQuotaEmpSelection", "byAll", true,new { id = "byAll" }) All
                                </div>
                                <div class="radio-inline">
                                    @Html.RadioButton("RBQuotaEmpSelection", "byEmpType",new { id = "byEmpType" }) By Employee Type
                                </div>
                                    <div class="radio-inline">
                                    @Html.RadioButton("RBQuotaEmpSelection", "byEmp",new { id = "byEmp" }) By Employee
                                </div>
                        </div>
                    </div>
                <section class="col-lg-7 col-md-7 col-sm-7">
                    <div class="form-group" id="ByEmpNoDiv">
                        <div class="form-inline">
                          <label class="col-lg-3 col-md-3 col-sm-3 control-label">Emp No</label>
                          <div class="col-lg-9 col-md-9 col-sm-9">
                              <div class="input-group">
                                  <input  autofocus id="EmpNo" name="EmpNo" type="text" class="form-control" placeholder="EMP-00001"/>
                                  <span class="input-group-btn">
                                      <input type='button' id="buttonId" name="buttonId" value="Search"  class="btn btn-secondary"/>​ 
                                  </span>
                                </div>
                          </div>
                        </div>

                    </div>
                    <div class="form-group" id="ByEmpTypeDiv">
                        <div class="form-inline">
                          <label class="col-lg-3 col-md-3 col-sm-3 control-label">Emp Type</label>
                          <div class="col-lg-9 col-md-9 col-sm-9">
                              <div class="input-group">
                                  @Html.DropDownList("TypeID",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
                                </div>
                          </div>
                        </div>

                    </div>         
                     <div class="col-md-9">                   
                    <div class="row" style="margin-bottom:1%">
                        <div class="col-md-4">
                            <label>Qouta Year</label>
                        </div>
                        <div class="col-md-6">
                            <input id="QYear" name="QYear" type="date" class="form-control"/>
                                    
                        </div>
                    </div>
                    <div class="row" style="margin-bottom:1%">
                        <div class="col-md-4">
                            <label>Casual Leaves</label>
                        </div>
                        <div class="col-md-4">
                            <input id="CLeaves" name="CLeaves" type="number" step="00.01" class="form-control"/>
                                    
                        </div>
                    </div>
                    <div class="row" style="margin-bottom:1%">
                        <div class="col-md-4">
                            <label>Annual Leaves</label>
                        </div>
                        <div class="col-md-4">
                           <input id="ALeaves" name="ALeaves" type="number" step="00.01" class="form-control"/>
                        </div>
                    </div>
                    <div class="row" style="margin-bottom:1%">
                        <div class="col-md-4">
                            <label>Sick Leaves</label>
                        </div>
                        <div class="col-md-4">
                            <input id="SLeaves" name="SLeaves" type="number" step="00.01" class="form-control"/>
                                    
                        </div>
                    </div>
                </div>
                    <div class="form-group">
                        <div class="col-lg-9 col-md-9 col-sm-9 col-lg-offset-3 col-md-offset-3 col-sm-offset-3">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            @Html.ActionLink("Cancel", "Index",null,new { @class = "btn btn-default " })
                        </div>
                    </div>
                </section>
                <section class="col-lg-5 col-md-5 col-sm-5">
                <div class="list-group">                  
                    <a  class="list-group-item">
                        <h4 class="list-group-item-heading">Employee Information</h4>
                        <p id="EName" class="list-group-item-text EmpInfoSecondaryMargin"></p>
                        <p id="EFName" class="list-group-item-text EmpInfoSecondaryMargin"></p>
                        <p id="EDesignation" class="list-group-item-text EmpInfoSecondaryMargin"></p>                       
                        <p id="ESection" class="list-group-item-text EmpInfoSecondaryMargin"></p>                                            
                    </a>                  
                </div>
                </section>
                
            </fieldset>
        </form>
    </div>
</article>
}
<script src="@Url.Content("~/Scripts/LeaveQuota.js")"></script>
