@model WMS.Models.Reader

@{
    ViewBag.Title = "Create";
}
<br />
 <div class="well bs-component">
        <form class="form-horizontal" action="~/Views/Holiday/Create" enctype="multipart/form-data" method="post">         
            <fieldset>
 <div>
      <form class ="form-inline" role="form">
          <div style="margin-left:2%" class="form-group "> <h2>Configure Reader</h2> </div>
      </form>  
    </div>
 <hr />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="control-label col-md-2">Reader Name</div>
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.RdrName,new { @class = "ComboBoxWidth form-control " })
                @Html.ValidationMessageFor(model => model.RdrName)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Reader Duty</div>
            <div class="col-md-3 ">
                @Html.DropDownList("RdrDutyID",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
                @Html.ValidationMessageFor(model => model.RdrDutyID)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">IP Address</div>
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.IpAdd,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IpAdd)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">IP Port</div>
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.IpPort,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IpPort)
            </div>
        </div>
         
        <div class="form-group">
            <div class="control-label col-md-2">Reader Type</div>
            <div class="col-md-4">
                @Html.DropDownList("RdrTypeID",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth" })
                @Html.ValidationMessageFor(model => model.RdrTypeID)
            </div>
        </div>
       @* <div>
            <label for="Regions">Regions </label>
            <select id="Regions" name="Regions"></select>
            <br />
        </div>*@
        <div class="form-group">
            <div class="control-label col-md-2">Location</div>
            <div class="col-md-4">
                @Html.DropDownList("LocID",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth " })
                @Html.ValidationMessageFor(model => model.LocID)
            </div>
        </div>
                @*<div class="form-group">
            <div class="control-label col-md-2">Reader Status</div>
            <div class="col-md-4">
                 @Html.DropDownList("Status", new List<SelectListItem>
                                    { 
                                        new SelectListItem { Text = "Active", Value = "true", Selected=true},
                                        new SelectListItem { Text = "Inactive", Value = "false"}
                                    },new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
                @Html.ValidationMessageFor(model => model.Status)
            </div>
        </div>*@
        <div class="form-group">
            <div class="control-label col-md-2"></div>
            <div class="col-md-4">
                 @Html.CheckBox("Status") <label>Active Device</label>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2"></div>
            <div class="col-md-4">
                 @Html.CheckBox("ClearRecords") <label>Clear Records After Downloading</label>
            </div>
        </div>
 
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default btn-success" />
                 @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
            </div>
        </div>
    </div>  
}
                </fieldset>
            </form>
     </div>
