@model PagedList.IPagedList<WMS.Models.JobCardApp>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Job Card";
}
<br />
  <div class="well bs-component">
        <fieldset> 
    <h2 style="margin-left:2%">Assign Job Card</h2>
            <h5 style="margin-left:2%">@Html.ActionLink("List of Job Cards", "JobCardList",null,new { @class = "" })</h5>
    <hr />
  
        @using (Html.BeginForm("EditAttJobCard", "JobCard", FormMethod.Post))
        {
 <section class="col-md-8">
        <div class="form-horizontal">
        <p class="ErorrMessage">@ViewBag.CMessage</p>
        <p style="color:green">@ViewBag.DMessage</p>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-4">
               <div class="radio-inline"><label><input type="radio" checked value="ByEmployee" name="CreateJCCriteria">By Employee</label></div>
                <div class="radio-inline"><label><input type="radio" value="ByCrew" name="CreateJCCriteria">By Crew</label></div>
            </div>
        </div>
        <div class="form-group" id="EmpNoDiv">
        <div class="form-inline">
            <label class="col-lg-2 col-md-2 col-sm-2 control-label">Emp No</label>
            <div class="col-lg-8 col-md-8 col-sm-8">
                <div class="input-group">
                    <input  autofocus id="EmpNo" name="EmpNo" type="text" class="form-control"/>
                    <span class="input-group-btn">
                        <input type='button' id="buttonId" name="buttonId" value="Search"  class="btn btn-secondary"/>​ 
                    </span>
                </div>
            </div>
        </div>
        </div>
        <div class="form-group" id="CrewDiv">
            <label class="control-label col-md-2">Crew<span style="color:red;"> *</span></label>
            <div class="col-md-4">
                @Html.DropDownList("CrewID",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidthJobCard"})
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">From<span style="color:red;"> *</span></label>
            <div class="col-md-4">
                <input id="JobDateFrom" name="JobDateFrom" value="@ViewData["JobDateFrom"]" type="date" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">To<span style="color:red;"> *</span></label>
            <div class="col-md-4">
                <input id="JobDateTo" name="JobDateTo" type="date" value="@ViewData["JobDateTo"]" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Card<span style="color:red;"> *</span></label>
            <div class="col-md-4">
                @Html.DropDownList("JobCardType",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidthJobCard"})
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Remarks<span style="color:red;"> *</span></label>
            <div class="col-md-4">
                <input id="Remakrs" name="Remakrs" type="text" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-8">
                 <input type="submit" value="Save"  class="btn btn-sm btn-success"/>
            </div>
        </div>
        </div>      
    </section>
 <section class="col-md-4" style="height:620px;"> 
        <div class="list-group">                  
            <a  class="list-group-item">
                <h4 class="list-group-item-heading">Employee Information</h4>
                <p id="EName" class="list-group-item-text EmpInfoSecondaryMargin"></p>
                <p id="EFName" class="list-group-item-text EmpInfoSecondaryMargin"></p>
                <p id="EDesignation" class="list-group-item-text EmpInfoSecondaryMargin"></p>                       
                <p id="ESection" class="list-group-item-text EmpInfoSecondaryMargin"></p>                                            
            </a>                  
        </div>  
    </section>
        }
                </fieldset>
            </form>
      </div>
<script src="@Url.Content("~/Scripts/EditAttendance.js")"></script>
<script src="@Url.Content("~/Scripts/JobCard.js")"></script>
<script src="~/Scripts/LoadEmpInfoJC.js" type="text/javascript"></script>
<style>
    hr {
        color: #fff;
        background-color: #fff;
        height: 1px;
    }
</style>
