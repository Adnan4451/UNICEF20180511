                            <!-- /.progress-group -->
                            <!-- /.progress-group -->
                            <div class="progress-group">
                                <span class="progress-text">Official Duty</span>
                                <span class="progress-number"><b>
                                    <label>@Model.JCOfficialDuty</label>
                                </b></span>
                                <div class="progress sm">
                                    <div class="progress-bar progress-bar-green" style="width: 100%"></div>
                                </div>
                            </div>
                            <div class="progress-group">
                                <span class="progress-text">Field Visit</span>
                                <span class="progress-number"><b>
                                    <label>@Model.JCFieldTour</label>
                                </b></span>
                                <div class="progress sm">
                                    <div class="progress-bar progress-bar-aqua" style="width: 100%"></div>
                                </div>
                            </div>
                            <!-- /.progress-group -->
                        </div>
                        <div class="col-md-9 col-sm-12 col-xs-12">
                            <!-- LINE CHART -->
                            <div class="box box-info">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Monthly Present Trend (@Model.LocationName)</h3>
                                </div>
                                <div id="linechart_material"></div>
                            </div>
                            <!-- /.box -->
                        </div>
                    </section>
                </section>
                <!-- /.content -->
            </div>
        </div>
    </section>
</article>
<script type="text/javascript">
    $(document).ready(function () {
        google.charts.load('current', { 'packages': ['line', 'corechart'] });
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {

            var button = document.getElementById('change-chart');
            var chartDiv = document.getElementById('chart_div');

            var data = new google.visualization.DataTable();
            data.addColumn('date', 'Month');
            data.addColumn('number',@Html.Raw(Json.Encode(Model.LocationName)));
            var list = @Html.Raw(Json.Encode(Model.DashboardGraphObj));
            for (var i = 0; i <= @Model.DashboardGraphObj.Count -1; i++) 
            {
                var date = new Date(list[i].XAxis);
                data.addRow([date,list[i].YAxis]);
            }
            var options = {
                hAxis: {
                    format: 'MMM dd, yyyy',
                    gridlines: { count: 36 }
                },
                legend: {position: 'top'},
                chart: {
                    //title: 'Box Office Earnings in First Two Weeks of Opening',
                    //subtitle: 'in millions of dollars (USD)'
                },
                width: 800,
                height: 300
            };

            var chart = new google.charts.Line(document.getElementById('linechart_material'));

            chart.draw(data, google.charts.Line.convertOptions(options));
        }
    });
</script>
