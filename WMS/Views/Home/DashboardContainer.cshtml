                                </div>
                            </div>
                            <div class="progress-group">
                                <span class="progress-text">Total Visitors</span>
                                <span class="progress-number"><b>
                                    <label>@Model.TotalVisitors</label>
                                </b></span>
                                <div class="progress sm">
                                    <div class="progress-bar progress-bar-green" style="width: 100%"></div>
                                </div>
                            </div>
                            <p class="text-center">
                            </p>
                            <div class="progress-group">
                                <span class="progress-text">Total Leaves</span>
                                <span class="progress-number"><b>
                                    <label>@Model.TotalLeaves</label>
                                </b></span>
                                <div class="progress sm">
                                    <div class="progress-bar progress-bar-pink" style="width: 100%"></div>
                                </div>
                            </div>
                            <!-- /.progress-group -->
                            <div class="progress-group">
