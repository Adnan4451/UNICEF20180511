@model WMS.Models.Department

@{
    ViewBag.Title = "Department Edit";
}
<br />
<h3>Edit Department</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
     <div class="well bs-component">
        <form class="form-horizontal" action="~/Views/Dept/Edit" enctype="multipart/form-data" method="post">
             @Html.AntiForgeryToken()
            <fieldset>
    <div class="form-horizontal">          
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.DeptID)

        <div class="form-group">
           <div class="control-label col-md-2">Department</div>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DeptName,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DeptName)
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default btn-success" />
              @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
            </div>
        </div>
    </div>
                </fieldset>
            </form>
         </div>
}

<script src="@Url.Content("~/Scripts/HR/DivisionCompany.js")"></script>