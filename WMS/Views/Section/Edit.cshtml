@model WMS.Models.Section

@{
    ViewBag.Title = "Section Edit";
}
<br />
@using (Html.BeginForm())
{
     <div class="well bs-component">
        <form class="form-horizontal" action="~/Views/Holiday/Create" enctype="multipart/form-data" method="post">
             @Html.AntiForgeryToken()
            <fieldset>
    <h3>Edit Section</h3>
    <hr />
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.SectionID)

        <div class="form-group">
            <label class="control-label col-md-2">Department</label>
            <div class="col-md-10">
              <select class="btn btn-default dropdown-toggle dropdown ComboBoxWidth" id="DeptID" name="DeptID"></select>
                        @Html.HiddenFor(model => model.DeptID , new { id = "selectedDeptIDHidden" }) 
                @Html.ValidationMessageFor(model => model.DeptID) 
            </div>
        </div>
          <div class="form-group">
           <label class="control-label col-md-2">Section</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.SectionName,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SectionName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
                   @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
            </div>
        </div>
    </div>
                </fieldset>
            </form>
         </div>
}

<script src="@Url.Content("~/Scripts/HR/DeptCompany.js")"></script>
<style>
    hr {
        color: #fff;
        background-color: #fff;
        height: 1px;
    }
</style>