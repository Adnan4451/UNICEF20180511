@model WMS.Models.Grade

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    
      <div class="well bs-component">
        <form class="form-horizontal" action="~/Views/Grade/Edit" enctype="multipart/form-data" method="post">
             @Html.AntiForgeryToken()
            <fieldset>
   <h3>Edit Grade</h3>
                <hr />
    <div class="form-horizontal">          
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.GradeID)

        <div class="form-group">
           <div class="control-label col-md-2">Grade</div>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.GradeName,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GradeName)
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default btn-success" />
              @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
            </div>
        </div>
    </div>
                </fieldset>
            </form>
         </div>
}
}
