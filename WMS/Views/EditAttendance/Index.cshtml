 <div class="well bs-component">     
            <fieldset>
<h3>Edit Attendance</h3><hr />
<p class="ErorrMessage">@ViewBag.Message</p>
        <p style="font-size:16px; margin-bottom:30px;">Edit Manual Time In/ Out</p>
       @using (Html.BeginForm("EditAttWizardOne", "EditAttendance", FormMethod.Post))
        {
            <section class="col-lg-7 col-md-7 col-sm-7">                                          
                        <div class="form-inline">
                          <label class="col-lg-2 col-md-2 col-sm-2 control-label">Date</label>
                          <div class="col-lg-9 col-md-9 col-sm-9">
                              <div class="input-group">
                                   <input id="DateFrom" name="DateFrom" value="@ViewData["datef"]" type="date" class="form-control" style="width:200px"/>
                                </div>
                          </div>
                        </div>
                <div class="form-group" id="ByEmpNoDiv">
                        <div class="form-inline">
                          <label style="margin-top:3%" class="col-lg-2 col-md-2 col-sm-2 control-label">Emp No</label>
                          <div class="col-lg-9 col-md-9 col-sm-9">
                              <div style="margin-top:3%" class="input-group">
                                  <input  autofocus id="EmpNo" name="EmpNo" type="text" class="form-control"/>
                                  <span class="input-group-btn">
                                      <input type='button' id="buttonId" name="buttonId" value="Search"  class="btn btn-secondary"/>​ 
                                  </span>
                                </div>
                          </div>
                        </div>

                    </div>    
                         <div class="form-inline">                  
                            <div class="col-md-7">
                                 <input style="margin-top:5%; margin-left:32%" type="submit" value="Next"  class="btn btn-xs btn-success"/>
                            </div>
                        </div>   

                </section> 
                <section class="col-lg-5 col-md-5 col-sm-5">
                    <div class="list-group">                  
                        <a  class="list-group-item">
                            <h4 class="list-group-item-heading">Employee Information</h4>
                            <p id="EName" class="list-group-item-text EmpInfoSecondaryMargin"></p>
                            <p id="EFName" class="list-group-item-text EmpInfoSecondaryMargin"></p>
                            <p id="EDesignation" class="list-group-item-text EmpInfoSecondaryMargin"></p>                       
                            <p id="ESection" class="list-group-item-text EmpInfoSecondaryMargin"></p>                                            
                        </a>                  
                    </div>
                </section>                    
        }
                </fieldset>
     </div>
<script src="@Url.Content("~/Scripts/EditAttendance.js")"></script>
